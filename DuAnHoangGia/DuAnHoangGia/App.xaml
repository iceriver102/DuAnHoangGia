<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms" 
             x:Class="DuAnHoangGia.App">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <Color x:Key="Border">#1dbcf4</Color>
            <Color x:Key="Gray">#d2d2d2</Color>
            <Color x:Key="Text">#7d7d77</Color>
            <Color x:Key="TextMenu">#1dbcf4</Color>
           
            <OnPlatform x:TypeArguments="x:String" x:Key="Regular">
                <On Platform="Android" Value="Fonts/MYRIADPRO-REGULAR.OTF#MYRIADPRO REGULAR" />
                <On Platform="iOS" Value="Fonts/MYRIADPRO REGULAR" />
            </OnPlatform>

            <OnPlatform x:TypeArguments="x:String" x:Key="Bold">
                <On Platform="Android" Value="Fonts/MYRIADPRO-BOLD.OTF#MYRIADPRO BOLD" />
                <On Platform="iOS" Value="Fonts/MYRIADPRO BOLD" />
            </OnPlatform>
            <!-- Application resource dictionary -->
        </ResourceDictionary>
    </prism:PrismApplication.Resources>
</prism:PrismApplication>